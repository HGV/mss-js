{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": true,
    "lib": ["es6"],
    "declaration": true,
    "outDir": "dist",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "nl2br": ["@types/nl2br"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
